<VirtualHost *:80>
                ServerName {{server_name}}
                ServerAdmin {{server_admin}}
                WSGIScriptAlias / {{wsgi_file_path}}
                <Directory {{app_path}}>
                        Order allow,deny
                        Allow from all
                </Directory>
                Alias /static {{static_file_path}}
                <Directory {{static_file_path}}/>
                        Order allow,deny
                        Allow from all
                </Directory>
                ErrorLog ${APACHE_LOG_DIR}/error.log
                LogLevel warn
                CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
